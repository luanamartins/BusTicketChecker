<?xml version="1.0" encoding="utf-8"?>
<manifest package="checker.ticker.bus.basic"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bus_icon"
        android:label="@string/app_name"
        android:theme="@style/ThemeSelector">
        <activity
            android:name="busticketchecker.activities.ApplicationActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="busticketchecker.activities.CheckerActivity"
            android:label="@string/title_activity_checker"/>

    </application>

</manifest>
